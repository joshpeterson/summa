<% @title="Outline - Summa Explorer" %>
<div class="container">
  <div class="title">Summa Theologica - Outline</div>
    <% @summa.parts.each_with_index do |part, i| %>
    <div class="panel panel-default">
      <div class="panel-heading">
        <h4 class="panel-title">
          <a class="normal-text" data-toggle="collapse" href="#collapse<%= i %>">
            <%=part.title%>
          </a>
        </h4>
      </div>
      <div id="collapse<%= i %>" class="panel-collapse collapse">
        <ul class="list-group">
          <% part.treatises.each_with_index do |treatise, j| %>
            <li class="list-group-item">
              <div class="panel panel-default">
                <div class="panel-heading">
                  <h4 class="panel-title">
                    <a class="normal-text" data-toggle="collapse"
                      href="#collapse<%= "#{i}#{j}" %>">
                      <%=treatise.title%>
                    </a>
                  </h4>
                </div>
                <div id="collapse<%= "#{i}#{j}" %>"
                      class="panel-collapse collapse">
                  <ul class="list-group">
                    <% treatise.questions.each_with_index do |question, k| %>
                      <li class="list-group-item">
                        <div class="panel panel-default">
                          <div class="panel-heading">
                            <h4 class="panel-title">
                              <a class="normal-text" data-toggle="collapse"
                                 href="#collapse<%= "#{i}#{j}#{k}" %>">
                                 <%=question.title%>
                              </a>
                            </h4>
                          </div>
                          <div id="collapse<%= "#{i}#{j}#{k}" %>"
                                class="panel-collapse collapse">
                            <ul class="list-group">
                              <% question.articles.each do |article| %>
                                <li class="list-group-item">
                                  <span class="normal-text">
                                    <%= link_to article.title, article %>
                                  </span>
                                </li>
                              <% end %>
                            </ul>
                          </div>
                        </div>
                      </li>
                    <% end %>
                  </ul>
                </div>
              </div>
            </li>
          <% end %>
        </ul>
      </div>
    </div>
    <% end %>
</div>
